# Example of using .bash.local to set local settings that need to be kept
# out of git.

# PATH exports
PATH=$PATH:~/COOl/NEW/THINGS
export PATH

# Git credentials
# Useful for isolating accounts used for work and personal projects
GIT_AUTHOR_NAME="Michael Biven"
GIT_AUTHOR_EMAIL="me@home.com"
GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"
git config --global user.name "$GIT_AUTHOR_NAME"
git config --global user.email "$GIT_AUTHOR_EMAIL"

