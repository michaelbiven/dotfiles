#!/bin/sh
# script to open a daily log file called %m %d %Y.txt
# to keep track of what I'm working on etc
# Michael Biven
# 12-16-2010
#

today=`date '+%m%d%Y'`.md
date=`date "+ %B %d %Y"`
header=`for((i=1;i<=${#date};i++));do printf "=" "+";done;printf "\n"`
notes="\n\n## Notes\n"
yesterday="\n\n## Yesterday\n"
now="\n\n## Today\n"



if [ ! -f /Users/mbiven/Dropbox/Daily/logs/$today ]; then
		touch /Users/mbiven/Dropbox/Daily/logs/$today
		echo $date > /Users/mbiven/Dropbox/Daily/logs/$today
		echo $header >> /Users/mbiven/Dropbox/Daily/logs/$today
        echo $yesterday >> /Users/mbiven/Dropbox/Daily/logs/$today
        echo $now >> /Users/mbiven/Dropbox/Daily/logs/$today
		echo $notes >> /Users/mbiven/Dropbox/Daily/logs/$today

fi

subl /Users/mbiven/Dropbox/Daily/logs/$today

